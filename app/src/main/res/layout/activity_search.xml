<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.git.thsesis.hotelapp.activities.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="113dp"
        tools:text="Search"
        android:layout_alignBottom="@+id/destinationTxtView"
        android:layout_toEndOf="@+id/textWelcome" />

    <EditText
        android:id="@+id/destinationTxtView"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Budapest"
        android:layout_below="@+id/textWelcome"
        android:layout_alignStart="@+id/textWelcome" />

    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="Please enter a destination:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginStart="34dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/getLocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/destinationTxtView"
        android:layout_below="@+id/destinationTxtView"
        android:layout_marginTop="15dp"
        android:text="Get Current City" />

</RelativeLayout >

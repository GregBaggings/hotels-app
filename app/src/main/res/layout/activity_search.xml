<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.git.thsesis.hotelapp.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="113dp"
        tools:text="Search"
        android:layout_alignBottom="@+id/hotelNameTxtView"
        android:layout_alignEnd="@+id/textViewAddress" />

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:text=""
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="293dp"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textViewCity"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewCity"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:text=""
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="100dp"
        android:layout_below="@+id/textViewHotelName"
        android:layout_alignStart="@+id/textViewHotelName"
        android:layout_marginTop="23dp" />

    <TextView
        android:id="@+id/textViewHotelName"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:text=""
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="247dp"
        android:layout_below="@+id/searchButton"
        android:layout_alignEnd="@+id/searchButton"
        android:layout_marginTop="52dp" />

    <EditText
        android:id="@+id/hotelNameTxtView"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Hotel1"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/textWelcome"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:text="Please enter a destination:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/hotelNameTxtView" />

    <TextView
        android:id="@+id/textViewAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp"
        android:text="Created by Gergely Agnecz Â© -2017. "
        android:textAlignment="center" />

</RelativeLayout >

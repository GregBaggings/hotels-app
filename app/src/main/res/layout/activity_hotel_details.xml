<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.git.thsesis.hotelapp.activities.HotelDetailsActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:text="Hotel details:" />

    <TextView
        android:id="@+id/txtHotelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="11dp" />

    <TextView
        android:id="@+id/txtCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtHotelName"
        android:layout_below="@+id/txtHotelName"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtCity"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/txtCity" />

    <TextView
        android:id="@+id/txtCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtAddress"
        android:layout_alignBottom="@+id/txtAddress"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/txtAddress" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtCity"
        android:layout_below="@+id/txtCity"
        android:layout_marginTop="23dp"
        android:text="Room Details:" />

    <TextView
        android:id="@+id/textRoomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="15dp" />

    <ListView
        android:id="@+id/listRooms"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignTop="@+id/textRoomName"
        android:layout_toEndOf="@+id/textRoomName" />

    <ListView
        android:id="@+id/listPrices"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_alignTop="@+id/listRooms"
        android:layout_toEndOf="@+id/listRooms" />

</RelativeLayout>
